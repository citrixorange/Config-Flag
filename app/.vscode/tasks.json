{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ App",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${workspaceFolder}/src/main.cpp",
                "-L",
                "${workspaceFolder}/lib",
                "-lconfig_flag_lib",
                "-I",
                "${workspaceFolder}/inc/config_flag_lib",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": []
        },
        {
            "label": "Transfer App Bin",
            "type": "shell",
            "command": "mv",
            "args": [
                "main.*",
                "./bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["Build C++ Project"]
        }
    ]
}
